<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#063157"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="로그인"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:paddingLeft="15dp"
            app:srcCompat="@drawable/ic_backicon_white"
            tools:ignore="VectorDrawableCompat" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/white" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/memberlogin_et_email"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/round_empty"
                    android:layout_height="40dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginBottom="20dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textColor="#FFFFFF"/>

                <EditText
                    android:id="@+id/memberlogin_et_pw"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:background="@drawable/round_empty"
                    android:layout_height="40dp"
                    android:paddingLeft="20dp"
                    android:layout_marginBottom="20dp"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/memberlogin_bt_login"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_fill"
                android:backgroundTintMode="add"
                android:hapticFeedbackEnabled="false"
                android:text="로그인"
                android:gravity="center"
                android:textColor="#063157"
                android:onClick="login"
                app:srcCompat="@drawable/round_empty" />


            <!--<com.nhn.android.naverlogin.ui.view.OAuthLoginButton
                android:id="@+id/naver_login"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTintMode="add"
                android:hapticFeedbackEnabled="false" />-->

            <com.kakao.usermgmt.LoginButton
                android:id="@+id/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTintMode="add"
                android:hapticFeedbackEnabled="false" >
            </com.kakao.usermgmt.LoginButton>


          <!--  <ImageButton
                android:id="@+id/kakao_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/kakao_login_medium_narrow"/>-->


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="아이디가 없으신가요? "
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/memberlogin_bt_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:textColor="@color/white"
                    android:text="회원가입" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
